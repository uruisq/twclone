<%= form_with(model: @tw, local: true, url: choose_new_or_edit ) do |form| %>
  <% if @tw.errors.any? %>
  <div id="error_explanation">
  <h2><%= @tw.errors.count %>件のエラーがあります。</h2>
  <ul>
  <% @tw.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
  <% end %>

  <div class="tw_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>

<br>
<%= link_to "tw一覧画面にもどる", tws_path %>